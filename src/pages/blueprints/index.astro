---
import Base from "@layouts/Base.astro";

const blueprints: any[] = await fetch("http://localhost:8080/v1/blueprints", {
  headers: {
    Cookie: Astro.request.headers.get("Cookie")!,
  },
}).then((res) => res.json());
---

<Base title="Blueprints">
  <h1 class="text-3xl mb-2 font-bold">Blueprints</h1>
  <div class="mb-2">
    <a
      href="/blueprints/new"
      class="inline-flex items-center text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
    >
      <svg
        class="w-3.5 h-3.5 mr-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 18 18"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 1v16M1 9h16"></path>
      </svg>
       New Blueprint
    </a>
  </div>
  <div class="flex flex-col gap-2">
    {
      blueprints.map((bp: any) => (
        <a
          href={`/blueprints/${bp.id}`}
          class="block p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700"
        >
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
            {bp.name}
          </h5>
          <p class="font-normal text-gray-700 dark:text-gray-400">{bp.id}</p>
        </a>
      ))
    }
  </div>
</Base>
