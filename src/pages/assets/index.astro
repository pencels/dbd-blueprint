---
import Base from "@layouts/Base.astro";

let data = [];

try {
  data = await fetch("http://localhost:8080/v1/packs", {
    headers: {
      Cookie: Astro.request.headers.get("Cookie")!,
    },
  }).then((res) => res.json());
} catch (e) {}
---

<Base title="Asset Packs">
  <h2 class="text-3xl mb-3 font-bold">Asset Packs</h2>
  <div>
    <a
      href="/upload"
      class="inline-flex items-center text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
    >
      <svg
        class="w-3.5 h-3.5 mr-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 18 18"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 1v16M1 9h16"></path>
      </svg>
      <span class="align-middle">New</span>
    </a>
  </div>
  <div class="mt-2 grid grid-cols-1 sm:grid-cols-2 gap-2">
    {
      data.map((pack: any) => (
        <a
          href={`/assets/${pack.slug}`}
          class="block p-6 bg-white border border-gray-200 rounded-lg shadow shadow-sky-400/10 hover:bg-slate-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700"
        >
          <h5 class="mb-2 text-2xl font-medium tracking-tight">
            {pack.name}
            <span class="text-sm ml-2">{pack.version}</span>
          </h5>
          <p class="font-normal text-gray-700 dark:text-gray-400">
            {pack.description}
          </p>
        </a>
      ))
    }
  </div>
</Base>
